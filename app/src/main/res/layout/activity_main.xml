<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="*"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:id="@+id/por" app:layout_constraintStart_toEndOf="@+id/tres" android:layout_marginStart="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/menos"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>
    <Button
            android:text="/"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:id="@+id/entre"
            app:layout_constraintStart_toEndOf="@+id/borrar"
            android:layout_marginStart="16dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/por" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>
    <Button
            android:text="3"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:id="@+id/tres" app:layout_constraintStart_toEndOf="@+id/dos" android:layout_marginStart="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/seis"/>
    <Button
            android:text="2"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:id="@+id/dos" app:layout_constraintStart_toEndOf="@+id/uno" android:layout_marginStart="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/cinco"/>
    <Button
            android:text="4"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:id="@+id/cuatro" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/siete"/>
    <Button
            android:text="1"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:id="@+id/uno" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/cuatro" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <Button
            android:text="0"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:id="@+id/cero"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/uno"/>
    <Button
            android:text="RESULT"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:id="@+id/result"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/dos"
            app:layout_constraintStart_toEndOf="@+id/cero" android:layout_marginStart="16dp" android:textSize="10sp"/>
    <Button
            android:text="BORRAR"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:id="@+id/borrar"
            android:textSize="10sp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tres" app:layout_constraintStart_toEndOf="@+id/result"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="5"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:id="@+id/cinco" app:layout_constraintStart_toEndOf="@+id/cuatro" android:layout_marginStart="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/ocho"/>
    <Button
            android:text="6"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:id="@+id/seis" app:layout_constraintStart_toEndOf="@+id/cinco" android:layout_marginStart="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/nueve"/>
    <Button
            android:text="-"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:id="@+id/menos" app:layout_constraintStart_toEndOf="@+id/seis" android:layout_marginStart="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/mas"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>
    <Button
            android:text="9"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:id="@+id/nueve" app:layout_constraintStart_toEndOf="@+id/ocho" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/resultado"/>
    <Button
            android:text="+"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:id="@+id/mas" app:layout_constraintStart_toEndOf="@+id/nueve" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/resultado"/>
    <TextView
            android:layout_width="339dp"
            android:layout_height="27dp"
            android:textSize="18sp" android:textAlignment="textEnd"
            android:id="@+id/resultado" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ecuacion" app:layout_constraintHorizontal_bias="0.517"/>
    <TextView
            android:layout_width="339dp"
            android:layout_height="0dp"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/calculadora" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.517" android:textSize="18sp" android:textAlignment="textEnd"
            android:id="@+id/ecuacion"/>
    <TextView
            android:text="Calculadora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calculadora" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.501" android:textAllCaps="false" android:textSize="24sp"/>
    <Button
            android:text="7"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:id="@+id/siete" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/resultado"/>
    <Button
            android:text="8"
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:id="@+id/ocho" app:layout_constraintStart_toEndOf="@+id/siete" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/resultado"/>

</android.support.constraint.ConstraintLayout>